<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="further_prog.assignment_2.Admin.AllUserOrdersViewController">
    <top>
        <VBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <children>
                <Label text="All User Orders" textFill="white">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Button onAction="#handleBackToAdminDashboard" text="Back to Admin Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <Accordion fx:id="userOrdersAccordion" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>